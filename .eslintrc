{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint-config-airbnb"
  ],
  "globals": {
    "chai": true,
    "XMLLite": true
  },
  "rules": {
    "comma-dangle": 1,
    "func-names": 1,
    "global-require": 1,
    "import/no-extraneous-dependencies": 1,
    "import/no-unresolved": 1,
    "key-spacing": 1,
    "new-cap": 1,
    "no-cond-assign": 1,
    "no-fallthrough": 1,
    "no-loop-func": 1,
    "no-mixed-operators": 1,
    "no-new": 1,
    "no-param-reassign": 1,
    "no-restricted-syntax": 1,
    "no-return-assign": 1,
    "no-underscore-dangle": 1,
    "object-curly-spacing": 1,
    "prefer-rest-params": 1,
    "react/jsx-filename-extension": 1,
    "react/jsx-space-before-closing": 1,
    "strict": 1,
    "max-len": [
      2,
      120,
      4,
      {
        "ignoreUrls": true
      }
    ],
    "id-length": [
      2,
      {
        "min": 1
      }
    ]
  }
}
